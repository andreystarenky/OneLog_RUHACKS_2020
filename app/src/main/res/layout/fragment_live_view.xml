<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/live_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="Badges"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/preview1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/live_view_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/badge1" />

    <ImageView
        android:id="@+id/preview2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/live_view_title"
        app:layout_constraintLeft_toRightOf="@id/preview1"
        android:src="@drawable/badge2" />

    <ImageView
        android:id="@+id/preview3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/live_view_title"
        app:layout_constraintLeft_toRightOf="@id/preview2"
        android:src="@drawable/badge3" />

    <ImageView
        android:id="@+id/preview4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/live_view_title"
        app:layout_constraintLeft_toRightOf="@id/preview3"
        android:src="@drawable/badge4" />

    <ImageView
        android:id="@+id/preview5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/live_view_title"
        app:layout_constraintLeft_toRightOf="@id/preview4"
        android:src="@drawable/badge5" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/badge1_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/preview1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp">

            <ImageView
                android:id="@+id/list_icon1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="16dp"

                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/badge1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/badge1_title"
                android:text="Champion"
                android:layout_marginTop="7dp"
                android:textColor="@android:color/black"
                android:layout_toRightOf="@+id/list_icon1"
                android:layout_alignParentTop="true"
                android:textSize="25dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/badge1_desc"
                android:text="Log 25 Doses"
                android:textColor="@android:color/black"
                android:layout_toRightOf="@+id/list_icon1"
                android:layout_below="@+id/badge1_title"
                />


            <TextView
                android:id="@+id/badge1_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:textSize="14dp"
                android:text="02/23"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:textColor="@android:color/darker_gray" />
            
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/badge2_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/badge1_card">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp">

            <ImageView
                android:id="@+id/badge2_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="16dp"

                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/badge2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/badge2_title"
                android:text="Takeoff!"
                android:layout_marginTop="7dp"
                android:textColor="@android:color/black"
                android:layout_toRightOf="@+id/badge2_icon"
                android:layout_alignParentTop="true"
                android:textSize="25dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/badge2_desc"
                android:text="Last 24 hours without a dose"
                android:textColor="@android:color/black"
                android:layout_toRightOf="@+id/badge2_icon"
                android:layout_below="@+id/badge2_title"
                />


            <TextView
                android:id="@+id/badge2_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:textSize="14dp"
                android:text="02/22"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:textColor="@android:color/darker_gray" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/badge3_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/badge2_card">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp">

            <ImageView
                android:id="@+id/badge3_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="16dp"

                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/badge3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/badge3_title"
                android:text="Pro Logger"
                android:layout_marginTop="7dp"
                android:textColor="@android:color/black"
                android:layout_toRightOf="@+id/badge3_icon"
                android:layout_alignParentTop="true"
                android:textSize="25dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/badge3_desc"
                android:text="Log 30 Days in a row"
                android:textColor="@android:color/black"
                android:layout_toRightOf="@+id/badge3_icon"
                android:layout_below="@+id/badge3_title"
                />


            <TextView
                android:id="@+id/badge3_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:textSize="14dp"
                android:text="02/21"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:textColor="@android:color/darker_gray" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/badge4_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/badge3_card">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp">

            <ImageView
                android:id="@+id/badge4_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="16dp"

                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/badge4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/badge4_title"
                android:text="New Leaf"
                android:layout_marginTop="7dp"
                android:textColor="@android:color/black"
                android:layout_toRightOf="@+id/badge4_icon"
                android:layout_alignParentTop="true"
                android:textSize="25dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/badge4_desc"
                android:text="Spend an hour outside"
                android:textColor="@android:color/black"
                android:layout_toRightOf="@+id/badge4_icon"
                android:layout_below="@+id/badge4_title"
                />


            <TextView
                android:id="@+id/badge4_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:textSize="14dp"
                android:text="02/20"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:textColor="@android:color/darker_gray" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/badge5_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/badge4_card">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp">

            <ImageView
                android:id="@+id/badge5_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="16dp"

                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/badge5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/badge5_title"
                android:text="Newbie"
                android:layout_marginTop="7dp"
                android:textColor="@android:color/black"
                android:layout_toRightOf="@+id/badge5_icon"
                android:layout_alignParentTop="true"
                android:textSize="25dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/badge5_desc"
                android:text="Log your first dose"
                android:textColor="@android:color/black"
                android:layout_toRightOf="@+id/badge5_icon"
                android:layout_below="@+id/badge5_title"
                />


            <TextView
                android:id="@+id/badge5_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:textSize="14dp"
                android:text="02/19"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:textColor="@android:color/darker_gray" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>